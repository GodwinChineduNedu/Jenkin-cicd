pipeline {

  agent none   // Do NOT use a global docker agent

  stages {

    stage('Checkout') {
      agent { docker { image 'maven:3.8.6-openjdk-11' } }
      steps {
        sh 'echo Checkout stage OK'
        checkout scm
      }
    }

    stage('Build and Test') {
      agent { docker { image 'maven:3.8.6-openjdk-11' } }
      steps {
        sh 'ls -ltr'
        sh 'cd Jenkins-Zero-To-Hero/java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }

    stage('Static Code Analysis') {
      agent { docker { image 'maven:3.8.6-openjdk-11' } }
      environment {
        SONAR_URL = "http://100.27.24.90:9000/"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd Jenkins-Zero-To-Hero/java-maven-sonar-argocd-helm-k8s/spring-boot-app
            mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      agent any   // RUN ON HOST MACHINE
      environment {
        DOCKER_IMAGE = "godwinchinedu/ultimate-cicd:${BUILD_NUMBER}"
      }
      steps {
        script {
          sh '''
            cd Jenkins-Zero-To-Hero/java-maven-sonar-argocd-helm-k8s/spring-boot-app
            docker build -t ${DOCKER_IMAGE} .
          '''

          docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            docker.image("${DOCKER_IMAGE}").push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      agent any
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config --global user.email "godwinchinedunedu@gmail.com"
            git config --global user.name "GodwinChineduNedu"

            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" Jenkins-Zero-To-Hero/java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            git add --all
            git commit -m "Update deployment image tag to ${BUILD_NUMBER}" || true
            git push https://${GITHUB_TOKEN}@github.com/GodwinChineduNedu/Jenkin-cicd.git main || true
          '''
        }
      }
    }

  }
}
